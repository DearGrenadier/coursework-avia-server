@model AviaServer.Database.Aircraft

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center"><strong>Create Aircraft</strong></h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Partial("AircraftEditForm")
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary btn-raised" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AircraftIndex", null, new { @class = "btn btn-raised btn-success"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
