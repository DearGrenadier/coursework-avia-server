@model IEnumerable<AviaServer.Database.AspNetRole>

@{
    ViewBag.Title = "Index";
}
<style type='text/css'>
    /*設定 數字靠右*/
</style>
<h1 class="text-center"><strong>Roles</strong></h1>
<p class="text-center">
    @Html.ActionLink("Create New", "AspNetRoleCreate", null, new { @class = "btn btn-danger btn-raised" })
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="text-align: left;">
            @Html.ActionLink("Edit", "AspNetRoleEdit", new { id=item.Id }, new { @class = "btn btn-warning btn-raised" })
        </td>
        <td style="text-align: left;">
            @Html.DisplayFor(modelItem => item.Name)
        </td>

    </tr>
}

</table>
