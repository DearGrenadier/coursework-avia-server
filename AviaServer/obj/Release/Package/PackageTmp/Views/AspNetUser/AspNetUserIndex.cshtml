@model IEnumerable<AviaServer.Database.AspNetUser>

@{
    ViewBag.Title = "Index";
}
<style type='text/css'>
    /*設定 數字靠右*/
    td:nth-child(11){text-align: right;}
</style>
<h1 class="text-center"><strong>Users</strong></h1>
<p class="text-center">
    @Html.ActionLink("Create New", "AspNetUserCreate",null,new {@class= "btn btn-danger btn-raised" })
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="text-align: left;">
            @Html.ActionLink("Edit", "AspNetUserEdit", new { id=item.Id }, new { @class = "btn btn-warning btn-raised" })
        </td>
        <td style="text-align: left;">
            @Html.DisplayFor(modelItem => item.Email)
        </td>
       
        <td style="text-align: left;">
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
      
        <td style="text-align: left;">
            @Html.DisplayFor(modelItem => item.UserName)
        </td>

    </tr>
}

</table>
