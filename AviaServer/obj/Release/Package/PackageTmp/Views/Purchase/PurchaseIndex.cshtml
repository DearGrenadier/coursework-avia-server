@model IEnumerable<AviaServer.Database.Purchase>

@{
    ViewBag.Title = "Index";
}
<style type='text/css'>
    /*設定 數字靠右*/
    td:nth-child(1){text-align: right;}
    td:nth-child(3){text-align: right;}
</style>
<h1 class="text-center"><strong>Purchase</strong></h1>
<p class="text-center">
    @Html.ActionLink("Create New", "PurchaseCreate", null, new { @class = "btn btn-danger btn-raised" })
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.DatePurchased)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Route.Id)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="text-align: left;">
            @Html.ActionLink("Edit", "PurchaseEdit", new { id=item.Id }, new { @class = "btn btn-warning btn-raised" })
        </td>
        <td style="text-align: left;">
            @Html.DisplayFor(modelItem => item.DatePurchased)
        </td>
        <td style="text-align: left;">
            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
        </td>
        <td style="text-align: left;">
            @Html.DisplayFor(modelItem => item.Route.Id)
        </td>

    </tr>
}

</table>
